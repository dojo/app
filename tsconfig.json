{
	"version": "2.0.2",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "_build/",
		"baseUrl": "node_modules",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"moduleResolution": "classic"
	},
	"include": [
		"./examples/**/*.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	],
	"exclude": [
		"_build",
		"dist",
		"node_modules"
	]
}
